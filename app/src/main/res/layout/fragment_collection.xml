<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionFragment"
    android:background="@drawable/transparent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fontFamily="sans-serif-smallcaps"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sunCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:src="@drawable/collection_sun" />

            <ImageView
                android:id="@+id/merkuryCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:src="@drawable/collection_merkur" />

            <ImageView
                android:id="@+id/venusCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:src="@drawable/collection_venus" />

            <ImageView
                android:id="@+id/earthCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_earth" />

            <ImageView
                android:id="@+id/marsCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_mars" />

            <ImageView
                android:id="@+id/jupiterCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_jupiter" />

            <ImageView
                android:id="@+id/saturnCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_saturn" />

            <ImageView
                android:id="@+id/uranCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_uran" />

            <ImageView
                android:id="@+id/neptuneCard"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/collection_neptune" />
        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>